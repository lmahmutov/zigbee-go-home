#!/bin/sh /etc/rc.common

START=99
STOP=10
USE_PROCD=1

PROG=/usr/bin/zigbee-home
CONF=/etc/zigbee-go-home/config.yaml

start_service() {
	procd_open_instance
	procd_set_param command "$PROG" "$CONF"
	procd_set_param respawn 3600 5 5
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_close_instance
}

stop_service() {
	killall zigbee-home 2>/dev/null
}
